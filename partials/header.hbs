<div role="banner" class="header_vinehall">
  {{#if @blog.logo}}
    <a class="logo_vinehall" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
  {{/if}}

  <h1 class="blogtitle_vinehall">
    <a title="{{@blog.title}}" href="{{@blog.url}}">
        {{{@blog.title}}}
    </a>
  </h1>

  <p class="blogdescription_vinehall">
    <a title="{{@blog.title}}" href="{{@blog.url}}">
      {{@blog.description}}
    </a>
  </p>
</div>
